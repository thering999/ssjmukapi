# .env.docker — Docker-specific environment configuration
# Copy this to .env when running in Docker: cp .env.docker .env

APP_ENV=local
APP_DEBUG=1
APP_ALLOW_ORIGINS=*

# Docker MySQL: use 'db' as hostname (container name)
# Port 3306 is internal; expose via docker-compose.yml if needed
DB_HOST=db
DB_PORT=3306
DB_NAME=ssjmukapi
DB_USER=root
DB_PASS=123456

# MOPH Alert Integration — ใส่ credentials ของคุณเอง
MOPH_ALERT_ENDPOINT=https://morpromt2c.moph.go.th/alert/v3.1/messages
MOPH_ALERT_CLIENT_KEY=your_client_key_here
MOPH_ALERT_SECRET_KEY=your_secret_key_here
MOPH_ALERT_DEFAULT_TYPE=HPT
MOPH_ALERT_TIMEOUT=15

# MOPH Notify Integration
MOPH_NOTIFY_ENDPOINT=https://morpromt2f.moph.go.th/api/notify/messages
MOPH_NOTIFY_CLIENT_KEY=your_client_key_here
MOPH_NOTIFY_SECRET_KEY=your_secret_key_here
MOPH_NOTIFY_TIMEOUT=15

# MOPH CCM Integration
MOPH_CCM_ENDPOINT=https://ccm-api.moph.go.th/api/v1/messages
MOPH_CCM_CLIENT_KEY=your_client_key_here
MOPH_CCM_SECRET_KEY=your_secret_key_here
MOPH_CCM_TIMEOUT=15

# Line Notify Integration
LINE_NOTIFY_TOKEN=your_line_notify_token_here
LINE_NOTIFY_TIMEOUT=15
